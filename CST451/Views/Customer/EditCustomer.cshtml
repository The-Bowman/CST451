@model CST451.Models.Users.CustomerViewModel

@{
    ViewData["Title"] = "EditCustomer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>EditCustomer</h1>

<h4>CustomerViewModel</h4>
